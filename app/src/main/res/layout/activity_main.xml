<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">



    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMas"
            android:textSize="30sp"
            android:textStyle="bold" android:onClick="bpmMas" android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginTop="177dp"
            app:layout_constraintTop_toTopOf="parent" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="visible"/>
    <Button
            android:layout_height="wrap_content"
            android:id="@+id/btPlay"
            android:background="@drawable/ic_play_arrow_black_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="visible"
            android:layout_width="100px"
            app:layout_constraintStart_toEndOf="@+id/btMas" android:layout_marginStart="49dp"
            app:layout_constraintEnd_toStartOf="@+id/btMen" android:layout_marginEnd="49dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/txtBPM"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/btStop"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMen"
            android:textSize="30sp"
            android:textStyle="bold" android:onClick="bpmMenos"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" android:layout_marginTop="177dp"
            app:layout_constraintTop_toTopOf="parent" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="visible"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb1"
            android:clickable="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent" android:checked="false" android:visibility="visible"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb2" android:clickable="false"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@+id/rb1" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp" android:visibility="visible"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb3" android:clickable="false"
            app:layout_constraintEnd_toStartOf="@+id/rb4"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="180dp"
            android:visibility="visible"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb4" android:clickable="false"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp" android:visibility="visible"/>
    <TextView
            android:text="60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBPM" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="81dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="163dp"
            android:textSize="36sp"/>
    <Button
            android:layout_height="wrap_content"
            android:id="@+id/btStop" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btPlay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="152dp" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/ic_pause_black_24dp" android:layout_width="100px"/>
</android.support.constraint.ConstraintLayout>